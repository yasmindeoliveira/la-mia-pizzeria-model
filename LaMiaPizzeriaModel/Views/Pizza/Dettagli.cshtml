@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli pizza</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.foto">
            </div>
            <p>
                <strong>Pizza:</strong>
                @Model.nome
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @Model.descrizione
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.prezzo euro
            </p>
        </div>
    </div>
</div>
